{
  "compilerOptions": {
    "experimentalDecorators": true,
    "useDefineForClassFields": true,
    "outDir": "build/dist",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "es6",
    "baseUrl": "./",
    "lib": [
      "es6",
      "dom"
    ],
    "esModuleInterop": true,
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ]
}